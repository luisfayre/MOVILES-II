<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:defaultValue="Default value"
        android:key="nombre"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Introduce tu nombre" />
    <CheckBoxPreference
        android:defaultValue="false"
        android:key="mode"
        android:title="Dark mode" />
    <SwitchPreference
        android:defaultValue="false"
        android:key="color"
        android:title="Color amarillo" />

    <PreferenceScreen android:title="Prueba">

        <EditTextPreference
            android:defaultValue="Default value"
            android:key="et_preference_1"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Edit text preference" />
        <SwitchPreference
            android:defaultValue="false"
            android:key="sw_preference_1"
            android:title="Switch preference" />
    </PreferenceScreen>

</PreferenceScreen>